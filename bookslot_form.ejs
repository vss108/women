<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Book Slot - <%= lab.name %></title>

  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    /* ðŸ”¥ Animated Background */
    body {
      background: linear-gradient(120deg, #ffdde1, #f9b4c3, #fff3e0, #ffdde1);
      background-size: 400% 400%;
      animation: bgMove 10s infinite alternate ease-in-out;
    }

    @keyframes bgMove {
      0% { background-position: left; }
      100% { background-position: right; }
    }

    main {
      max-width: 750px;
      margin: 50px auto;
      padding: 20px;
    }

    /* Stylish Card */
    .card {
      background: #ffffffdd;
      padding: 30px;
      border-radius: 18px;
      box-shadow: 0 10px 35px rgba(255, 0, 100, 0.18);
      animation: fadeIn 1.2s ease-in-out;
      backdrop-filter: blur(9px);
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(25px); }
      to { opacity: 1; transform: translateY(0); }
    }

    h2 {
      text-align: center;
      font-size: 28px;
      color: #b30048;
      margin-bottom: 20px;
    }

    p strong {
      color: #ab0040;
    }

    label {
      display: block;
      margin-top: 15px;
      font-weight: 600;
      color: #700030;
    }

    input, select, textarea {
      width: 100%;
      padding: 10px;
      margin-top: 6px;
      border-radius: 10px;
      border: 2px solid #ffb9cd;
      background: #fff;
      transition: 0.3s ease;
      font-size: 15px;
    }

    input:focus, textarea:focus {
      border-color: #d00068;
      box-shadow: 0 0 10px rgba(255, 0, 100, 0.25);
      outline: none;
    }

    button {
      margin-top: 20px;
      width: 100%;
      padding: 12px;
      border-radius: 12px;
      background: #dd0078;
      color: white;
      border: none;
      font-size: 18px;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
      box-shadow: 0 6px 18px rgba(255, 0, 100, 0.4);
    }

    button:hover {
      background: #a40055;
      transform: translateY(-2px);
      box-shadow: 0 12px 22px rgba(255, 0, 100, 0.45);
    }

    .error-box {
      background: #ffe1e7;
      padding: 12px;
      border-left: 4px solid #d10050;
      border-radius: 6px;
      margin-bottom: 10px;
      animation: fadeIn 0.5s ease-in-out;
    }
  </style>
</head>

<body>

<main>
  <div class="card">
    <h2>ðŸ“… Book Your Slot</h2>
    <p><strong>Lab:</strong> <%= lab.name %></p>
    <p><strong>Location:</strong> <%= lab.location %></p>
    <p><strong>Contact:</strong> <%= lab.phone || 'N/A' %></p>

    <form method="post" action="/book-slot">
      <input type="hidden" name="labId" value="<%= lab._id %>">

      <% if (errors && errors.length) { %>
        <div class="error-box">
          <strong>Please correct the following:</strong>
          <ul>
            <% errors.forEach(function(e){ %>
              <li><%= e.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>

      <label for="name">Your Name</label>
      <input id="name" name="name" required value="<%= user?.name || '' %>">

      <label for="phone">Phone</label>
      <input id="phone" name="phone" value="<%= user?.phone || '' %>">

      <label for="email">Email</label>
      <input id="email" name="email" type="email" value="<%= user?.email || '' %>">

      <label for="date">Preferred Date</label>
      <input id="date" name="date" type="date" required>

      <label for="time">Preferred Time</label>
      <input id="time" name="time" type="time" required>

      <label for="notes">Notes / Tests required</label>
      <textarea id="notes" name="notes" rows="3"></textarea>

      <button type="button" id="confirmBtn">Confirm Booking</button>
    </form>
  </div>
</main>

<script>
  document.getElementById("confirmBtn").addEventListener("click", function (e) {
    e.preventDefault();
    const name = document.getElementById('name').value;
    const date = document.getElementById('date').value;
    const time = document.getElementById('time').value;
    const lab = '<%= lab.name %>';

    alert(`Booking Confirmed!\n\nLab: ${lab}\nName: ${name}\nDate: ${date}\nTime: ${time}`);

    // Save locally
    const bookings = JSON.parse(localStorage.getItem('bookings')) || [];
    bookings.push({ lab, name, date, time });
    localStorage.setItem('bookings', JSON.stringify(bookings));

    // Submit to server
    document.querySelector("form").submit();

    // Redirect to precautions page
    setTimeout(() => {
      window.location.href = "/precautions";
    }, 800);
  });
</script>

</body>
</html>
