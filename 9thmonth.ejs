    .foods-eat{ border-left-color:#ff9800; background:#fff8e1 }
    .foods-avoid{ border-left-color:#f44336; background:#ffe6e6 }
    .exercise{ border-left-color:#2196f3; background:#e3f2fd }
    .tests{ border-left-color:#00bcd4; background:#e0f2f1 }
    .warning{ border-left-color:#d32f2f; background:#ffe6e6 }
    .hospital-bag{ border-left-color:#9c27b0; background:#f3e5f5 }
    .doctor-tips{ border-left-color:#ff6b6b; background:#ffe6e6 }
